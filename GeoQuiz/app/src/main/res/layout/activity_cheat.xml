<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cheat_default_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheat_default_text"></TextView>

    <Button
        android:id="@+id/cheat_show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheat_show_button"
        android:layout_margin="10dp"></Button>

    <TextView
        android:id="@+id/answer_shown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>


</LinearLayout>